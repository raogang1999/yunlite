---
/** Products — 产品展示 */
interface Feature {
  label: string;
  bgClass: string;
  iconColor: string;
  icon: string;
}

const features: Feature[] = [
  {
    label: '真实场景对话练习',
    bgClass: 'bg-warm-50',
    iconColor: 'text-warm-500',
    icon: 'M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.087.16 2.185.283 3.293.369V21l4.076-4.076a1.526 1.526 0 011.037-.443 48.282 48.282 0 005.68-.494c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z',
  },
  {
    label: 'AI 智能评估与反馈',
    bgClass: 'bg-sage-50',
    iconColor: 'text-sage-500',
    icon: 'M3.75 3v11.25A2.25 2.25 0 006 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0118 16.5h-2.25m-7.5 0h7.5m-7.5 0l-1 3m8.5-3l1 3m0 0l.5 1.5m-.5-1.5h-9.5m0 0l-.5 1.5m.75-9l3-3 2.148 2.148A12.061 12.061 0 0116.5 7.605',
  },
  {
    label: '7 大技能体系',
    bgClass: 'bg-amber-50',
    iconColor: 'text-amber-500',
    icon: 'M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5',
  },
  {
    label: '安全无压力的练习环境',
    bgClass: 'bg-rose-50',
    iconColor: 'text-rose-400',
    icon: 'M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z',
  },
];
---

<section id="products" class="py-24 sm:py-32">
  <div class="max-w-5xl mx-auto px-6">
    <div class="reveal">
      <!-- Section title -->
      <div class="flex items-center gap-4 mb-16">
        <div class="w-8 h-[1px] bg-warm-400"></div>
        <span class="text-xs tracking-[0.3em] text-warm-600 uppercase font-medium">Products</span>
        <div class="flex-1 h-[1px] bg-cream-300"></div>
      </div>

      <h2 class="font-serif text-2xl sm:text-3xl text-gray-800 font-semibold mb-12">
        我们的产品
      </h2>

      <!-- Voxia Product Card -->
      <a
        href="https://voxia.yunlite.com"
        target="_blank"
        rel="noopener"
        class="product-card block bg-white rounded-3xl border border-cream-300 overflow-hidden shadow-sm"
      >
        <div class="flex flex-col md:flex-row">
          <!-- Left: Visual -->
          <div class="md:w-2/5 bg-gradient-to-br from-warm-50 via-cream-100 to-sage-50 p-8 sm:p-12 flex items-center justify-center">
            <div class="text-center space-y-4">
              <div class="relative inline-block">
                <div class="w-20 h-20 mx-auto rounded-2xl bg-white shadow-lg shadow-warm-200/40 flex items-center justify-center">
                  <svg class="w-10 h-10" viewBox="0 0 48 48" fill="none">
                    <path
                      d="M8 12C8 9.79 9.79 8 12 8H36C38.21 8 40 9.79 40 12V28C40 30.21 38.21 32 36 32H18L12 38V32H12C9.79 32 8 30.21 8 28V12Z"
                      fill="url(#voxia-grad)"
                      opacity="0.9"
                    />
                    <circle cx="18" cy="20" r="2" fill="white" opacity="0.9" />
                    <circle cx="24" cy="20" r="2" fill="white" opacity="0.9" />
                    <circle cx="30" cy="20" r="2" fill="white" opacity="0.9" />
                    <defs>
                      <linearGradient id="voxia-grad" x1="8" y1="8" x2="40" y2="38">
                        <stop offset="0%" stop-color="#E5A91B" />
                        <stop offset="100%" stop-color="#6E8E5D" />
                      </linearGradient>
                    </defs>
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="text-2xl font-bold text-gray-800 tracking-wide">Voxia</h3>
                <p class="text-sm text-gray-500 mt-1">AI 社交技能训练</p>
              </div>
            </div>
          </div>

          <!-- Right: Description -->
          <div class="md:w-3/5 p-8 sm:p-12 flex flex-col justify-center">
            <div class="inline-flex items-center gap-1.5 px-3 py-1 bg-sage-50 text-sage-600 text-xs font-medium rounded-full w-fit mb-5">
              <span class="w-1.5 h-1.5 bg-sage-500 rounded-full animate-pulse"></span>
              即将上线
            </div>

            <p class="text-gray-600 leading-[1.8] mb-6">
              在真实场景中与 AI 对话练习，获得即时反馈与个性化评估。无论是日常闲聊、职场沟通还是情感表达，Voxia 帮你在安全的环境中反复练习，逐步建立社交自信。
            </p>

            <!-- Features -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 mb-8">
              {features.map((f) => (
                <div class="flex items-center gap-3">
                  <div class={`feature-icon ${f.bgClass}`}>
                    <svg class={`w-5 h-5 ${f.iconColor}`} fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d={f.icon} />
                    </svg>
                  </div>
                  <span class="text-sm text-gray-600">{f.label}</span>
                </div>
              ))}
            </div>

            <!-- CTA -->
            <div class="flex items-center gap-2 text-warm-600 font-medium text-sm group">
              <span>了解更多</span>
              <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            </div>
          </div>
        </div>
      </a>

      <!-- More coming hint -->
      <div class="mt-12 text-center">
        <p class="text-gray-400 text-sm font-light">更多产品，正在路上 ✦</p>
      </div>
    </div>
  </div>
</section>
