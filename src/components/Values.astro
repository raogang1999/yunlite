---

<section class="py-20 bg-cream-100/50">
  <div class="max-w-5xl mx-auto px-6">
    <div class="reveal">
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 sm:gap-12">
        {values.map((v) => (
          <div class="text-center space-y-3">
            <div class={`w-12 h-12 mx-auto rounded-2xl ${v.bgClass} flex items-center justify-center`}>
              <svg class={`w-6 h-6 ${v.iconColor}`} fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d={v.icon} />
              </svg>
            </div>
            <h3 class="font-serif text-gray-800 font-semibold">{v.title}</h3>
            <p class="text-gray-500 text-sm leading-relaxed font-light whitespace-pre-line">{v.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
