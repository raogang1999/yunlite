---
/** 固定顶部导航栏 — 滚动后出现毛玻璃效果 */
const navLinks = [
  { href: '#philosophy', label: '理念' },
  { href: '#products', label: '产品' },
  { href: '#contact', label: '联系' },
];
---

<nav id="navbar" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300">
  <div class="max-w-5xl mx-auto px-6 py-5 flex items-center justify-between">
    <!-- Logo -->
    <a href="#" class="flex items-center gap-2.5 group">
      <span class="text-warm-gradient font-serif text-xl font-bold tracking-wide">蕴光</span>
      <span class="text-xs tracking-[0.2em] text-gray-400 font-light uppercase hidden sm:inline">
        Yunlite Studio
      </span>
    </a>
    <!-- Links -->
    <div class="flex items-center gap-6 text-sm">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class="text-gray-500 hover:text-warm-600 transition-colors duration-200"
        >
          {link.label}
        </a>
      ))}
    </div>
  </div>
</nav>
